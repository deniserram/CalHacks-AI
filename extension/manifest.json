{
  "manifest_version": 3,
  "name": "Website Analyzer",
  "version": "1.0",
  "description": "Analyzes website design, workflow, and extracts branding.",
  "permissions": [
    "activeTab",       
    "scripting"        
  ],
  "host_permissions": [
    "http://localhost:5000/*" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png"
  }
}