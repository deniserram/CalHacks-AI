{
  "manifest_version": 3,
  "name": "Website AI Analyzer",
  "version": "1.0",
  "description": "Analyze website design, workflow, and branding with AI.",
  "permissions": [
    "activeTab",     
    "scripting",       
    "storage"           
  ],
  "host_permissions": [
    "http://localhost:5000/*", 
    "<all_urls>"               
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png"
  }
}